<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>ShopSavvy - Rastreador de Precios | Mercado Libre</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
      background: #f5f5f5;
      color: #333;
      min-height: 100vh;
    }

    .header {
      background: linear-gradient(135deg, #ffe600 0%, #fff159 100%);
      padding: 20px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .header-content {
      max-width: 1200px;
      margin: 0 auto;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .logo {
      display: flex;
      align-items: center;
      gap: 12px;
    }

    .logo h1 {
      font-size: 28px;
      color: #333;
    }

    .logo-icon {
      font-size: 32px;
    }

    .powered-by {
      font-size: 12px;
      background: #333;
      color: #ffe600;
      padding: 4px 12px;
      border-radius: 20px;
    }

    .nav {
      display: flex;
      gap: 16px;
    }

    .nav a {
      color: #333;
      text-decoration: none;
      padding: 8px 16px;
      border-radius: 6px;
      transition: background 0.2s;
    }

    .nav a:hover {
      background: rgba(0,0,0,0.1);
    }

    .search-section {
      background: white;
      padding: 32px 20px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    }

    .search-container {
      max-width: 800px;
      margin: 0 auto;
    }

    .search-box {
      display: flex;
      gap: 12px;
      margin-bottom: 20px;
    }

    .search-input {
      flex: 1;
      padding: 16px 20px;
      font-size: 16px;
      border: 2px solid #ddd;
      border-radius: 8px;
      transition: border-color 0.2s;
    }

    .search-input:focus {
      outline: none;
      border-color: #3483fa;
    }

    .search-btn {
      padding: 16px 32px;
      font-size: 16px;
      font-weight: 600;
      background: #3483fa;
      color: white;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      transition: background 0.2s;
    }

    .search-btn:hover {
      background: #2968c8;
    }

    .filters {
      display: flex;
      gap: 20px;
      flex-wrap: wrap;
      align-items: center;
    }

    .filter-group {
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .filter-group label {
      font-size: 14px;
      color: #666;
    }

    .filter-group input[type="number"],
    .filter-group select {
      padding: 8px 12px;
      border: 1px solid #ddd;
      border-radius: 6px;
      font-size: 14px;
    }

    .main-content {
      max-width: 1200px;
      margin: 32px auto;
      padding: 0 20px;
    }

    .results-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 20px;
    }

    .results-count {
      font-size: 14px;
      color: #666;
    }

    .notice {
      background: #fff7e6;
      border: 1px solid #ffd591;
      padding: 12px 16px;
      border-radius: 8px;
      margin-bottom: 20px;
      font-size: 14px;
    }

    .products-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
      gap: 20px;
    }

    .product-card {
      background: white;
      border-radius: 12px;
      overflow: hidden;
      box-shadow: 0 2px 8px rgba(0,0,0,0.08);
      transition: transform 0.2s, box-shadow 0.2s;
      cursor: pointer;
    }

    .product-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 8px 24px rgba(0,0,0,0.12);
    }

    .product-image {
      width: 100%;
      height: 200px;
      object-fit: contain;
      background: #fafafa;
      padding: 16px;
    }

    .product-info {
      padding: 16px;
    }

    .product-title {
      font-size: 14px;
      color: #333;
      margin-bottom: 8px;
      line-height: 1.4;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }

    .product-price {
      font-size: 24px;
      font-weight: 600;
      color: #333;
      margin-bottom: 8px;
    }

    .product-seller {
      font-size: 12px;
      color: #999;
    }

    .product-condition {
      display: inline-block;
      font-size: 11px;
      padding: 2px 8px;
      background: #e8f5e9;
      color: #2e7d32;
      border-radius: 4px;
      margin-top: 8px;
    }

    .loading {
      text-align: center;
      padding: 60px 20px;
      color: #666;
    }

    .loading-spinner {
      width: 48px;
      height: 48px;
      border: 4px solid #f3f3f3;
      border-top: 4px solid #3483fa;
      border-radius: 50%;
      animation: spin 1s linear infinite;
      margin: 0 auto 16px;
    }

    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }

    .empty-state {
      text-align: center;
      padding: 60px 20px;
      color: #666;
    }

    .empty-icon {
      font-size: 64px;
      margin-bottom: 16px;
    }

    .categories {
      display: flex;
      gap: 12px;
      flex-wrap: wrap;
      margin-top: 20px;
    }

    .category-chip {
      padding: 8px 16px;
      background: #f0f0f0;
      border-radius: 20px;
      font-size: 14px;
      color: #333;
      cursor: pointer;
      transition: background 0.2s;
    }

    .category-chip:hover {
      background: #e0e0e0;
    }

    .footer {
      background: #333;
      color: white;
      padding: 32px 20px;
      margin-top: 60px;
      text-align: center;
    }

    .footer p {
      font-size: 14px;
      color: #999;
    }
  </style>
</head>
<body>
  <header class="header">
    <div class="header-content">
      <div class="logo">
        <span class="logo-icon">üõí</span>
        <h1>ShopSavvy</h1>
        <span class="powered-by">Powered by Mercado Libre</span>
      </div>
      <nav class="nav">
        <a href="/">Inicio</a>
        <a href="/login">Iniciar Sesi√≥n</a>
        <a href="/register">Registrarse</a>
      </nav>
    </div>
  </header>

  <section class="search-section">
    <div class="search-container">
      <form id="searchForm" class="search-box">
        <input
          type="text"
          id="searchInput"
          class="search-input"
          placeholder="Buscar productos en Mercado Libre..."
          autocomplete="off"
        />
        <button type="submit" class="search-btn">Buscar</button>
      </form>
      <div class="filters">
        <div class="filter-group">
          <label for="minPrice">Precio m√≠n:</label>
          <input type="number" id="minPrice" value="0" min="0" step="100" />
        </div>
        <div class="filter-group">
          <label for="maxPrice">Precio m√°x:</label>
          <input type="number" id="maxPrice" value="50000" min="0" step="100" />
        </div>
        <div class="filter-group">
          <label for="sortBy">Ordenar:</label>
          <select id="sortBy">
            <option value="price_asc">Precio: menor a mayor</option>
            <option value="price_desc">Precio: mayor a menor</option>
          </select>
        </div>
      </div>
      <div id="categories" class="categories"></div>
    </div>
  </section>

  <main class="main-content">
    <div id="results"></div>
  </main>

  <footer class="footer">
    <p>ShopSavvy Price Tracker - Rastrea precios y encuentra las mejores ofertas</p>
    <p style="margin-top: 8px;">Datos proporcionados por Mercado Libre API</p>
  </footer>

  <script>
    // API Base URL
    const API_BASE = '';

    // Format price in MXN
    function formatPrice(price, currency = 'MXN') {
      return new Intl.NumberFormat('es-MX', {
        style: 'currency',
        currency: currency
      }).format(price);
    }

    // Load categories
    async function loadCategories() {
      try {
        const response = await fetch(`${API_BASE}/api/categories`);
        const data = await response.json();

        if (data.success && data.categories) {
          const container = document.getElementById('categories');
          container.innerHTML = data.categories.slice(0, 8).map(cat => `
            <span class="category-chip" onclick="searchByCategory('${cat.name}')">${cat.name}</span>
          `).join('');
        }
      } catch (error) {
        console.error('Error loading categories:', error);
      }
    }

    // Search by category
    function searchByCategory(categoryName) {
      document.getElementById('searchInput').value = categoryName;
      searchProducts();
    }

    // Search products
    async function searchProducts() {
      const query = document.getElementById('searchInput').value.trim();
      const minPrice = document.getElementById('minPrice').value;
      const maxPrice = document.getElementById('maxPrice').value;
      const sort = document.getElementById('sortBy').value;

      const resultsContainer = document.getElementById('results');

      if (!query) {
        resultsContainer.innerHTML = `
          <div class="empty-state">
            <div class="empty-icon">üîç</div>
            <h3>Busca productos</h3>
            <p>Ingresa un t√©rmino de b√∫squeda para encontrar productos</p>
          </div>
        `;
        return;
      }

      // Show loading
      resultsContainer.innerHTML = `
        <div class="loading">
          <div class="loading-spinner"></div>
          <p>Buscando productos...</p>
        </div>
      `;

      try {
        const params = new URLSearchParams({
          q: query,
          minPrice: minPrice,
          maxPrice: maxPrice,
          sort: sort
        });

        const response = await fetch(`${API_BASE}/api/products/search?${params}`);
        const data = await response.json();

        if (data.success) {
          displayResults(data);
        } else {
          resultsContainer.innerHTML = `
            <div class="notice">Error: ${data.error}</div>
          `;
        }
      } catch (error) {
        console.error('Search error:', error);
        resultsContainer.innerHTML = `
          <div class="notice">Error al buscar productos. Por favor intenta de nuevo.</div>
        `;
      }
    }

    // Display search results
    function displayResults(data) {
      const container = document.getElementById('results');

      if (!data.products || data.products.length === 0) {
        container.innerHTML = `
          <div class="empty-state">
            <div class="empty-icon">üì¶</div>
            <h3>No se encontraron productos</h3>
            <p>Intenta con otros t√©rminos de b√∫squeda</p>
          </div>
        `;
        return;
      }

      let html = '';

      if (data.notice) {
        html += `<div class="notice">${data.notice}</div>`;
      }

      html += `
        <div class="results-header">
          <span class="results-count">${data.pagination.total} productos encontrados</span>
        </div>
        <div class="products-grid">
      `;

      data.products.forEach(product => {
        const condition = product.condition === 'new' ? 'Nuevo' :
                         product.condition === 'used' ? 'Usado' : product.condition;

        html += `
          <div class="product-card" onclick="viewProduct('${product.id}')">
            <img
              src="${product.thumbnail || 'https://via.placeholder.com/300x200?text=Sin+Imagen'}"
              alt="${product.title}"
              class="product-image"
              onerror="this.src='https://via.placeholder.com/300x200?text=Sin+Imagen'"
            />
            <div class="product-info">
              <h3 class="product-title">${product.title}</h3>
              <div class="product-price">${formatPrice(product.price, product.currency_id || 'MXN')}</div>
              ${product.seller?.nickname ? `<div class="product-seller">Vendido por: ${product.seller.nickname}</div>` : ''}
              ${condition ? `<span class="product-condition">${condition}</span>` : ''}
            </div>
          </div>
        `;
      });

      html += '</div>';
      container.innerHTML = html;
    }

    // View product details
    function viewProduct(productId) {
      window.location.href = `/product/${productId}`;
    }

    // Load all products on page load
    async function loadAllProducts() {
      const resultsContainer = document.getElementById('results');

      resultsContainer.innerHTML = `
        <div class="loading">
          <div class="loading-spinner"></div>
          <p>Cargando productos...</p>
        </div>
      `;

      try {
        const response = await fetch(`${API_BASE}/api/products`);
        const data = await response.json();

        if (data.success) {
          displayResults({
            products: data.products,
            pagination: { total: data.count },
            notice: data.note
          });
        }
      } catch (error) {
        console.error('Load error:', error);
        resultsContainer.innerHTML = `
          <div class="empty-state">
            <div class="empty-icon">üîç</div>
            <h3>Busca productos</h3>
            <p>Ingresa un t√©rmino de b√∫squeda para encontrar productos</p>
          </div>
        `;
      }
    }

    // Event listeners
    document.getElementById('searchForm').addEventListener('submit', (e) => {
      e.preventDefault();
      searchProducts();
    });

    // Initialize
    loadCategories();
    loadAllProducts();
  </script>
</body>
</html>
