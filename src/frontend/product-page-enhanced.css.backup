/* ==========================================
   ENHANCED PRODUCT PAGE 2026
   Currency Switcher + Real Specs + Animations
   ========================================== */

/* ==========================================
   CURRENCY SWITCHER (Top Right)
   ========================================== */
.currency-switcher-container {
    position: fixed;
    top: 80px;
    right: 24px;
    z-index: 999;
    animation: slideInRight 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
}

@keyframes slideInRight {
    from {
        opacity: 0;
        transform: translateX(50px);
    }
    to {
        opacity: 1;
        transform: translateX(0);
    }
}

.currency-switcher {
    display: flex;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border-radius: 16px;
    padding: 8px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.12);
    border: 1px solid rgba(255, 255, 255, 0.3);
    gap: 4px;
}

.currency-btn {
    padding: 8px 16px;
    border: none;
    background: transparent;
    border-radius: 12px;
    font-size: 14px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    color: #64748B;
}

.currency-btn:hover {
    background: rgba(0, 102, 255, 0.1);
    color: #0066FF;
}

.currency-btn.active {
    background: linear-gradient(135deg, #0066FF 0%, #0052CC 100%);
    color: white;
    box-shadow: 0 4px 12px rgba(0, 102, 255, 0.3);
    transform: translateY(-1px);
}

.currency-btn:active {
    transform: scale(0.95);
}

/* Dark mode support */
@media (prefers-color-scheme: dark) {
    .currency-switcher {
        background: rgba(30, 41, 59, 0.95);
        border-color: rgba(255, 255, 255, 0.1);
    }
}

/* Mobile responsive */
@media (max-width: 768px) {
    .currency-switcher-container {
        top: 70px;
        right: 16px;
    }

    .currency-btn {
        padding: 6px 12px;
        font-size: 13px;
    }
}

/* ==========================================
   ENHANCED PRODUCT SPECS SECTION
   ========================================== */
.product-specs-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 16px;
    margin: 24px 0;
    padding: 24px;
    background: linear-gradient(135deg, #F8FAFC 0%, #F1F5F9 100%);
    border-radius: 16px;
    border: 1px solid #E2E8F0;
}

.spec-item {
    display: flex;
    flex-direction: column;
    gap: 8px;
    padding: 16px;
    background: white;
    border-radius: 12px;
    border: 1px solid #E2E8F0;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    animation: fadeInUp 0.5s ease-out backwards;
}

.spec-item:nth-child(1) { animation-delay: 0.1s; }
.spec-item:nth-child(2) { animation-delay: 0.2s; }
.spec-item:nth-child(3) { animation-delay: 0.3s; }
.spec-item:nth-child(4) { animation-delay: 0.4s; }
.spec-item:nth-child(5) { animation-delay: 0.5s; }
.spec-item:nth-child(6) { animation-delay: 0.6s; }

@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.spec-item:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
    border-color: #0066FF;
}

.spec-label {
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    color: #64748B;
}

.spec-value {
    font-size: 16px;
    font-weight: 700;
    color: #1E293B;
}

.spec-icon {
    width: 32px;
    height: 32px;
    margin-bottom: 8px;
    padding: 8px;
    background: linear-gradient(135deg, #0066FF 0%, #0052CC 100%);
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.spec-icon svg {
    width: 16px;
    height: 16px;
    stroke: white;
    fill: none;
    stroke-width: 2;
}

/* ==========================================
   ENHANCED PRODUCT TITLE
   ========================================== */
.product-title-enhanced {
    font-size: 32px;
    font-weight: 800;
    line-height: 1.3;
    color: #0F172A;
    margin: 16px 0;
    animation: fadeIn 0.6s ease-out;
}

@keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
}

.product-brand-badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 6px 14px;
    background: linear-gradient(135deg, #F59E0B 0%, #D97706 100%);
    color: white;
    border-radius: 8px;
    font-size: 13px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 12px;
    animation: bounceIn 0.6s cubic-bezier(0.68, -0.55, 0.265, 1.55);
}

@keyframes bounceIn {
    0% {
        opacity: 0;
        transform: scale(0.3);
    }
    50% {
        transform: scale(1.05);
    }
    100% {
        opacity: 1;
        transform: scale(1);
    }
}

.product-model-info {
    font-size: 14px;
    color: #64748B;
    margin-top: 8px;
    display: flex;
    flex-wrap: wrap;
    gap: 12px;
}

.model-detail {
    display: flex;
    align-items: center;
    gap: 4px;
}

.model-detail svg {
    width: 16px;
    height: 16px;
    stroke: currentColor;
}

/* ==========================================
   PRICE SECTION WITH ANIMATIONS
   ========================================== */
.product-price-enhanced {
    display: flex;
    flex-direction: column;
    gap: 16px;
    padding: 24px;
    background: linear-gradient(135deg, #0066FF 0%, #0052CC 100%);
    border-radius: 16px;
    margin: 24px 0;
    box-shadow: 0 12px 32px rgba(0, 102, 255, 0.3);
    animation: scaleIn 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
}

@keyframes scaleIn {
    from {
        opacity: 0;
        transform: scale(0.9);
    }
    to {
        opacity: 1;
        transform: scale(1);
    }
}

.price-main {
    font-size: 48px;
    font-weight: 900;
    color: white;
    line-height: 1;
    transition: transform 0.3s ease;
}

.price-main:hover {
    transform: scale(1.05);
}

.price-currency-badge {
    display: inline-flex;
    padding: 4px 12px;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 8px;
    font-size: 20px;
    font-weight: 700;
    margin-left: 8px;
    backdrop-filter: blur(10px);
}

.price-original {
    font-size: 24px;
    color: rgba(255, 255, 255, 0.7);
    text-decoration: line-through;
}

.price-savings {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 8px 16px;
    background: rgba(16, 185, 129, 0.2);
    border-radius: 12px;
    color: #10B981;
    font-size: 16px;
    font-weight: 700;
    backdrop-filter: blur(10px);
    animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.05); }
}

/* ==========================================
   PRODUCT IMAGES WITH ZOOM EFFECT
   ========================================== */
.product-image-enhanced {
    position: relative;
    overflow: hidden;
    border-radius: 24px;
    background: #F8FAFC;
    padding: 32px;
    transition: transform 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
}

.product-image-enhanced:hover {
    transform: scale(1.02);
}

.product-image-enhanced img {
    width: 100%;
    height: auto;
    object-fit: contain;
    transition: transform 0.6s ease;
    cursor: zoom-in;
}

.product-image-enhanced:hover img {
    transform: scale(1.1);
}

/* Image zoom overlay */
.image-zoom-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.95);
    z-index: 9999;
    display: none;
    align-items: center;
    justify-content: center;
    cursor: zoom-out;
    animation: fadeIn 0.3s ease;
}

.image-zoom-overlay.active {
    display: flex;
}

.image-zoom-overlay img {
    max-width: 90%;
    max-height: 90%;
    object-fit: contain;
    animation: zoomIn 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
}

@keyframes zoomIn {
    from {
        opacity: 0;
        transform: scale(0.5);
    }
    to {
        opacity: 1;
        transform: scale(1);
    }
}

/* ==========================================
   THUMBNAIL GALLERY ENHANCED
   ========================================== */
.thumbnail-gallery-enhanced {
    display: flex;
    gap: 12px;
    margin-top: 16px;
    overflow-x: auto;
    padding: 8px;
    scrollbar-width: thin;
    scrollbar-color: #0066FF #E2E8F0;
}

.thumbnail-gallery-enhanced::-webkit-scrollbar {
    height: 6px;
}

.thumbnail-gallery-enhanced::-webkit-scrollbar-track {
    background: #E2E8F0;
    border-radius: 3px;
}

.thumbnail-gallery-enhanced::-webkit-scrollbar-thumb {
    background: #0066FF;
    border-radius: 3px;
}

.thumbnail-enhanced {
    flex-shrink: 0;
    width: 80px;
    height: 80px;
    border-radius: 12px;
    border: 2px solid #E2E8F0;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    overflow: hidden;
    background: white;
}

.thumbnail-enhanced img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    padding: 8px;
}

.thumbnail-enhanced:hover {
    border-color: #0066FF;
    transform: translateY(-4px);
    box-shadow: 0 8px 16px rgba(0, 102, 255, 0.2);
}

.thumbnail-enhanced.active {
    border-color: #0066FF;
    border-width: 3px;
    box-shadow: 0 0 0 4px rgba(0, 102, 255, 0.1);
}

/* ==========================================
   ACTION BUTTONS WITH MICRO-INTERACTIONS
   ========================================== */
.product-actions-enhanced {
    display: flex;
    gap: 16px;
    margin-top: 32px;
}

.action-btn-enhanced {
    flex: 1;
    padding: 16px 32px;
    border: none;
    border-radius: 16px;
    font-size: 16px;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
}

.action-btn-enhanced::before {
    content: "";
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.3);
    transform: translate(-50%, -50%);
    transition: width 0.6s, height 0.6s;
}

.action-btn-enhanced:active::before {
    width: 300px;
    height: 300px;
}

.action-btn-primary {
    background: linear-gradient(135deg, #F59E0B 0%, #D97706 100%);
    color: white;
    box-shadow: 0 8px 24px rgba(245, 158, 11, 0.3);
}

.action-btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 12px 32px rgba(245, 158, 11, 0.4);
}

.action-btn-secondary {
    background: white;
    color: #0066FF;
    border: 2px solid #0066FF;
}

.action-btn-secondary:hover {
    background: #0066FF;
    color: white;
    transform: translateY(-2px);
}

/* ==========================================
   RESPONSIVE DESIGN
   ========================================== */
@media (max-width: 768px) {
    .product-title-enhanced {
        font-size: 24px;
    }

    .price-main {
        font-size: 36px;
    }

    .product-specs-grid {
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 12px;
        padding: 16px;
    }

    .spec-item {
        padding: 12px;
    }

    .product-actions-enhanced {
        flex-direction: column;
    }

    .action-btn-enhanced {
        padding: 14px 24px;
    }
}

/* ==========================================
   LOADING SKELETON STATES
   ========================================== */
.skeleton {
    animation: skeleton-loading 1.5s ease-in-out infinite;
    background: linear-gradient(
        90deg,
        #F1F5F9 0%,
        #E2E8F0 50%,
        #F1F5F9 100%
    );
    background-size: 200% 100%;
}

@keyframes skeleton-loading {
    0% { background-position: 200% 0; }
    100% { background-position: -200% 0; }
}

/* ==========================================
   SCROLL ANIMATIONS
   ========================================== */
[data-animate] {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.6s ease, transform 0.6s ease;
}

[data-animate].animated {
    opacity: 1;
    transform: translateY(0);
}
